#!/bin/bash

# 1. Extract raw values using jq
raw_name=$(jq -r '.name' data.json)
raw_type=$(jq -r '.types[0].type.name' data.json)
raw_weight=$(jq -r '.weight' data.json)
raw_height=$(jq -r '.height' data.json)

# 2. Use sed to capitalize the first letter (Requirement: use sed)
# 's/./\u&/' matches the first character (.) and uppercases it (\u)
name=$(echo "$raw_name" | sed 's/./\u&/')
type=$(echo "$raw_type" | sed 's/./\u&/')

# 3. Use awk to perform the math (Requirement: use awk)
# We echo the variable into awk to divide by 10
formatted_weight=$(echo "$raw_weight" | awk '{print $1/10}')
formatted_height=$(echo "$raw_height" | awk '{print $1/10}')

# 4. Print the final sentence using the EXACT format the checker wants
echo "$name is of type $type, weighs ${formatted_weight}kg, and is ${formatted_height}m tall."